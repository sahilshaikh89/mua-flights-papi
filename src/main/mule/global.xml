<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:cluster="http://www.mulesoft.org/schema/mule/ee/cluster" xmlns:wsc="http://www.mulesoft.org/schema/mule/wsc"
	xmlns:american-flights-api="http://www.mulesoft.org/schema/mule/american-flights-api"
	xmlns:http="http://www.mulesoft.org/schema/mule/http" xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/american-flights-api http://www.mulesoft.org/schema/mule/american-flights-api/current/mule-american-flights-api.xsd
http://www.mulesoft.org/schema/mule/wsc http://www.mulesoft.org/schema/mule/wsc/current/mule-wsc.xsd">
	<http:listener-config name="HTTP_Listener_Connector" doc:name="HTTP Listener config" doc:id="f5972931-0a1c-42ed-ba27-5250bce0b256" >
		<http:listener-connection host="${http.host}" port="${http.port}" />
	</http:listener-config>
	<configuration-properties doc:name="Configuration properties" doc:id="c8017f06-7e72-4190-872a-bdf8712e2096" file="config-${env}.yaml" />
	<global-property doc:name="Global Property" doc:id="31744280-fdaa-4c48-86fe-65c5be6abf16" name="env" value="DEV" />
	<american-flights-api:config name="American_Flights_API_Config" doc:name="American Flights API Config" doc:id="bdfe2814-fe64-463f-98f0-1684c1142663" property_host="${american.rest.hostName}" property_port="${american.rest.portNumber}" property_basePath="${american.rest.basePath}" property_protocol="${american.rest.protocol}" property_responseTimeout="${american.rest.responseTimeout}" />
	<http:request-config name="United_Http_Request_Connector" doc:name="HTTP Request configuration" doc:id="7ee45089-c40f-41ae-baa2-d66efc709c15" basePath="${united.rest.basePath}">
		<http:request-connection protocol="${united.rest.protocol}" host="${united.rest.hostName}" port="${united.rest.portNumber}" />
	</http:request-config>
	<wsc:config name="Delta_SOAP_Connector" doc:name="Web Service Consumer Config" doc:id="9fe27cf6-e9fe-4b24-ba3e-aeb0cbcfe6ad" >
		<wsc:connection wsdlLocation="${delta.soap.wsdlLocation}" service="${delta.soap.serviceName}" port="${delta.soap.portType}" address="${delta.soap.address}" >
			<wsc:web-service-security actor="http://schemas.xmlsoap.org/soap/actor/next" />
		</wsc:connection>
	</wsc:config>

	<configuration doc:name="Configuration" doc:id="72c1d8c7-4617-4e66-b488-bb96e146a13f" defaultErrorHandler-ref="globalError_Handler" >
	</configuration>
	<error-handler name="globalError_Handler" doc:id="a98ad0f0-8f14-4041-8431-32df56ecc27a" >
		<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate - DELTA SOAP ERROR" doc:id="bab81bc1-9af9-4731-b04a-e57d5f75c420" when='#[error causedBy "WSC:CONNECTIVITY"]'>
			<set-payload value='#[{&#10;	"errMesg": "DELTA SOAP ERRORS: Processed by Applicaiton-level Global Error Handler -&gt; On Error Propagate",&#10;	"errDesc": error.description,&#10;	"errorAt": error.failingComponent,&#10;	"errorType": {&#10;		"moduleName": error.errorType.namespace,&#10;		"errorID": error.errorType.identifier&#10;	}&#10;}]' doc:name="Set Payload" doc:id="13e7a8e3-b7c2-4246-abf1-cc00935a90d7" />
			<logger level="ERROR" doc:name="Logger" doc:id="4cfed21f-7a82-46ab-894a-93102ead36d3" message="#[payload]"/>
		</on-error-propagate>
		<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate - ALL OTHER ERRORS" doc:id="d070ab7c-eea1-41b0-9ae2-90ef6cbeed4b" >
			<set-payload value='#[{&#10;	"errMesg": "ALL OTHER ERRORS: Processed by Applicaiton-level Global Error Handler -&gt; On Error Propagate",&#10;	"errDesc": error.description,&#10;	"errorAt": error.failingComponent,&#10;	"errorType": {&#10;		"moduleName": error.errorType.namespace,&#10;		"errorID": error.errorType.identifier&#10;	}&#10;}]' doc:name="Set Payload" doc:id="e2cd1a53-cf55-49b5-9117-6acc6361b5d7" />
			<logger level="ERROR" doc:name="Logger" doc:id="1a743287-f5f3-456e-9603-d86d47f9eb03" message="#[payload]" />
		</on-error-propagate>
	</error-handler>
</mule>
